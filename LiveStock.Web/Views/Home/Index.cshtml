@{
    ViewData["Title"] = "Agriculture - Cultivating the Future of Farming";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">Cultivating the Future of Farming</h1>
                    <p class="hero-subtitle">Providing sustainable solutions for modern agriculture.</p>
                    <a href="#about" class="btn btn-primary btn-lg">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <img src="/images/hero-field.jpg" alt="Lush green field with crops" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>
</section>


<section class="features-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="feature-block feature-sustainable">
                    <div class="feature-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h3>Sustainable Practices</h3>
                    <p>Implementing eco-friendly farming methods that protect our environment while maximizing productivity.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-block feature-renewable">
                    <div class="feature-icon">
                        <i class="fas fa-solar-panel"></i>
                    </div>
                    <h3>Renewable Sourcing</h3>
                    <p>Utilizing renewable energy sources and sustainable materials to reduce our carbon footprint.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-block feature-expertise">
                    <div class="feature-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h3>Our Expertise</h3>
                    <p>Decades of farming experience combined with cutting-edge agricultural technology and innovation.</p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="why-choose-us py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title">Why Choose Us</h2>
                <div class="benefits-list">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Proven track record in sustainable agriculture</li>
                        <li><i class="fas fa-check text-success"></i> Advanced livestock management systems</li>
                        <li><i class="fas fa-check text-success"></i> Expert team with deep farming knowledge</li>
                        <li><i class="fas fa-check text-success"></i> Commitment to environmental stewardship</li>
                        <li><i class="fas fa-check text-success"></i> Innovative solutions for modern challenges</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="about" class="about-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <img src="/images/farmer-field.jpg" alt="Farmer in field" class="img-fluid rounded">
            </div>
            <div class="col-lg-6">
                <h2>About Our Farm</h2>
                <p>We are dedicated to revolutionizing agriculture through sustainable practices, advanced technology, and deep-rooted farming wisdom. Our 2300-hectare farm spans 15 carefully managed camps, each designed to optimize livestock health and productivity.</p>
                <p>From our state-of-the-art livestock tracking systems to our comprehensive staff management solutions, we provide the tools and expertise needed for modern, efficient farming operations.</p>
            </div>
        </div>
    </div>
</section>


<section class="services-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Services</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-seedling"></i>
                    </div>
                    <h4>Crop Management</h4>
                    <p>Comprehensive crop planning, monitoring, and optimization strategies.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-cow"></i>
                    </div>
                    <h4>Livestock Farming</h4>
                    <p>Advanced livestock management with health monitoring and tracking systems.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-recycle"></i>
                    </div>
                    <h4>Sustainable Practices</h4>
                    <p>Eco-friendly farming methods that protect the environment and ensure long-term productivity.</p>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="blog" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Latest News & Blog</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">How Technology is Transforming Livestock Management</h5>
                        <p class="card-text">Discover the latest innovations in farm management and how they improve productivity and animal welfare.</p>
                        <a href="#" class="btn btn-outline-primary">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Sustainable Farming: Our Commitment to the Environment</h5>
                        <p class="card-text">Learn about our eco-friendly practices and how we reduce our carbon footprint while maximizing yield.</p>
                        <a href="#" class="btn btn-outline-primary">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="testimonials" class="py-5">
    <div class="container">
