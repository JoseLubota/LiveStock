@{
    ViewData["Title"] = "LiveStock — Farm Management";
}

<!-- Home: Farm Owner Landing -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="mb-3">Welcome to LiveStock</h1>
                <p class="lead mb-4">
                    This platform helps you manage your entire farm operation — livestock, camps,
                    rainfall tracking, staff, tasks, assets, and finance — all in one place.
                </p>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-warning btn-lg" asp-controller="Account" asp-action="Login">Login</a>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-success btn-lg" asp-controller="Management" asp-action="Dashboard">Management Dashboard</a>
                        <a class="btn btn-outline-success btn-lg" asp-controller="Employee" asp-action="Dashboard">Employee Dashboard</a>
                    }
                </div>
            </div>
            <div class="col-lg-5">
                <img src="~/images/ChatGPT Image Oct 25, 2025, 05_27_01 PM.png" alt="Farm overview" class="img-fluid rounded shadow" />
            </div>
        </div>
    </div>
</section>

<!-- Overview -->
<section class="py-4">
    <div class="container">
        <h2 class="h4 mb-3">What you can do</h2>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="p-3 border rounded h-100">
                    <i class="fas fa-sheep text-success me-2"></i>
                    Track livestock (sheep and cows), movements, health and records.
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded h-100">
                    <i class="fas fa-map-marker-alt text-success me-2"></i>
                    Manage camps across your farm and monitor rainfall per camp.
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded h-100">
                    <i class="fas fa-users text-success me-2"></i>
                    Organize staff, assign tasks, and track progress.
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded h-100">
                    <i class="fas fa-tint text-success me-2"></i>
                    Record water and rainfall events and view history.
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded h-100">
                    <i class="fas fa-tools text-success me-2"></i>
                    Maintain assets and equipment lifecycle.
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded h-100">
                    <i class="fas fa-dollar-sign text-success me-2"></i>
                    Track finance records and farm expenses.
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Get Started Instructions -->
<section class="py-4 bg-light">
    <div class="container">
        <h2 class="h4 mb-3">Getting started</h2>
        <ol class="mb-4">
            <li>Click <strong>Login</strong> in the top-right of the navigation bar.</li>
            <li>Enter your admin or staff credentials to sign in.</li>
            <li>After login, you land on your <strong>Dashboard</strong> with a sidebar to access modules.</li>
        </ol>
        <p class="text-muted mt-3">
            Admins use the <strong>Management Dashboard</strong>. Staff use the <strong>Employee Dashboard</strong>.
        </p>
    </div>
</section>
