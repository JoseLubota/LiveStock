<script>
    function removeStaff(staffId) {
        if (confirm('Are you sure you want to remove this staff member?')) {
            // Create a form and submit it
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("DeleteStaff", "Management")';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'id';
            input.value = staffId;
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }

    function editStaff(staffId) {
         window.location.href = '@Url.Action("EditStaff", "Management")/' + staffId;
     }

     function selectStaff(staffId) {
         // This function can be used to select a staff member for assignment or other operations
         console.log('Selected staff ID:', staffId);
         // You can add more functionality here as needed
         alert('Staff member selected (ID: ' + staffId + ')');
     }

    // Add staff form validation
    document.addEventListener('DOMContentLoaded', function() {
        const addStaffForm = document.getElementById('addStaffForm');
        if (addStaffForm) {
            addStaffForm.addEventListener('submit', function(e) {
                const name = document.getElementById('Name').value.trim();
                const employeeId = document.getElementById('EmployeeId').value.trim();
                const position = document.getElementById('Position').value.trim();
                
                if (!name || !employeeId || !position) {
                    e.preventDefault();
                    alert('Please fill in all required fields (Name, Employee ID, and Position).');
                    return false;
                }
            });
        }
    });
</script>