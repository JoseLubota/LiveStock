@model LiveStock.Core.Models.Cow

@{
    ViewData["Title"] = "Add Cow";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Sheep">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" asp-action="Cows">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Camps">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Staff">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Tasks">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Water">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Assets">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Finance">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Notes">
                            <i class="fas fa-sticky-note me-2"></i>
                            Notes
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Add New Cow</h1>
                <a asp-action="Cows" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Cow List
                </a>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Add a cow to herd</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="AddCow" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="EarTag" class="form-label">Ear Tag ID:</label>
                                            <input asp-for="EarTag" class="form-control" placeholder="Enter ear tag ID" required />
                                            <span asp-validation-for="EarTag" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Breed" class="form-label">Breed/Race:</label>
                                            <input asp-for="Breed" class="form-control" placeholder="Enter breed" required />
                                            <span asp-validation-for="Breed" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="BirthDate" class="form-label">Birth Date:</label>
                                            <input asp-for="BirthDate" class="form-control" type="date" min="0" placeholder="Enter age" required />
                                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CampId" class="form-label">Camp:</label>
                                            <select asp-for="CampId" class="form-control" required>
                                                <option value="">Select Camp</option>
                                                @foreach (var camp in ViewBag.Camps)
                                                {
                                                    <option value="@camp.Id">Camp @camp.CampNumber</option>
                                                }
                                            </select>
                                            <span asp-validation-for="CampId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Gender" class="form-label">Male/Female:</label>
                                            <select asp-for="Gender" class="form-control" required>
                                                <option value="">Select Gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Price" class="form-label">Price:</label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="Enter price" required />
                                            </div>
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <div class="form-check">
                                                <input asp-for="IsPregnant" class="form-check-input" type="checkbox" id="isPregnant" />
                                                <label class="form-check-label" for="isPregnant">
                                                    Is Pregnant
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Photo:</label>
                                            <input type="file" class="form-control" name="Photo" accept="image/*" />
                                            <small class="text-muted">Upload a photo of the cow (optional)</small>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mb-3" id="calvingDateDiv" style="display: none;">
                                    <label class="form-label">Expected Calving Date:</label>
                                    <input asp-for="ExpectedCalvingDate" type="date" class="form-control" name="expectedCalvingDate" />
                                </div> 
                                
                                <div class="mb-3">
                                    <label asp-for="Notes" class="form-label">Notes (optional):</label>
                                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any additional notes about this cow"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                                
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Cows" class="btn btn-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-plus me-2"></i>ADD COW
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Information</h6>
                        </div>
                        <div class="card-body">
                            <p><strong>Ear Tag ID:</strong> Unique identification number for the cow.</p>
                            <p><strong>Breed/Race:</strong> Enter the specific breed or race of the cow.</p>
                            <p><strong>Age:</strong> Age in years or months.</p>
                            <p><strong>Camp:</strong> Select which camp the cow will be assigned to.</p>
                            <p><strong>Gender:</strong> Specify if the cow is male or female.</p>
                            <p><strong>Price:</strong> Estimated or actual value of the cow.</p>
                            <p><strong>Pregnancy Status:</strong> Check if the cow is pregnant.</p>
                            <p><strong>Calving Date:</strong> Expected date if pregnant.</p>
                            <p><strong>Photo:</strong> Upload a clear photo for identification.</p>
                            <p><strong>Notes:</strong> Any special information about this cow.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>



<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        margin: 0.125rem 0.5rem;
        transition: all 0.3s ease;
    }
    
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--orange-yellow) !important;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .btn {
        border-radius: 10px;
        font-weight: 600;
    }
    
    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: border-color 0.3s ease;
    }
    
    .form-control:focus {
        border-color: var(--medium-green);
        box-shadow: 0 0 0 0.2rem rgba(78, 113, 69, 0.25);
    }
</style>