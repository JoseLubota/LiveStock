@model IEnumerable<LiveStock.Core.Models.Sheep>

@{
    ViewData["Title"] = "Sheep Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" asp-action="Sheep">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Cows">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Camps">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Staff">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Tasks">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Water">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Assets">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Finance">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Sheep Management</h1>
                <a asp-action="AddSheep" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add Sheep
                </a>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Sheep
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.Count()
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-sheep fa-2x text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Active Sheep
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.Count(s => s.IsActive)
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Total Value
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        R @Model.Sum(s => s.Price).ToString("N2")
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-info"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Average Age
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        <!-- (Model.Any() ? Model.Average(s => s.BirthDate).ToString("F1") : "0") years -->
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar fa-2x text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sheep List -->
            <form asp-controller="Management" asp-action="SheepBulkActions" id="bulkActionsFormSheep" method="post">
                <div class="card shadow mb-4">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="fas fa-list me-2"></i>Sheep Inventory</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th><input type="checkbox" id="selectAllSheep" aria-label="Select all sheep" /></th>
                                            <th>Photo</th>
                                            <th>Breed</th>
                                            <th>Birth Date</th>
                                            <th>Camp</th>
                                            <th>Gender</th>
                                            <th>Price</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var sheep in Model)
                                        {
                                            <tr>
                                                <td><input type="checkbox" class="sheep-select" name="selectedSheepID" value="@sheep.SheepID" aria-label="Select sheep @sheep.SheepID" /></td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(sheep.PhotoUrl))
                                                    {
                                                        <img src="@sheep.PhotoUrl" alt="Sheep Photo" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; border-radius: 5px;">
                                                            <i class="fas fa-sheep"></i>
                                                        </div>
                                                    }
                                                </td>
                                                <td>@sheep.Breed</td>
                                                <td>@sheep.BirthDate</td>
                                                <td>
                                                    <span class="badge bg-info">Camp @sheep.CampId</span>
                                                </td>
                                                <td>
                                                    @if (sheep.Gender == "Male")
                                                    {
                                                        <span class="badge bg-primary">@sheep.Gender</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-pink">@sheep.Gender</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="text-success">$@sheep.Price.ToString("N2")</span>
                                                </td>
                                                <td>
                                                    @if (sheep.IsActive)
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Inactive</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="SheepDetails" asp-route-id="@sheep.SheepID" class="btn btn-sm btn-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Sheep_Edit_Details" class="btn btn-sm btn-warning" asp-route-id="@sheep.SheepID" onclick="editSheep(@sheep.SheepID)">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a  asp-action="RemoveSheep" asp-route-id="@sheep.SheepID" class="btn btn-sm btn-danger" onclick="removeSheep(@sheep.SheepID)">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-sheep fa-4x text-muted mb-3"></i>
                                <h5 class="text-muted">No Sheep Found</h5>
                                <p class="text-muted">Start building your herd by adding your first sheep!</p>
                                <a asp-action="AddSheep" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Add Your First Sheep
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Bulk actions for sheep -->
                <div class="card shadow mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="fas fa-tasks me-2"></i>Bulk Actions</h6>
                    </div>
                    <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-4 mb-2">
                                    <select class="form-select" name="action" id="bulkActionTypeSheep" aria-label="Bulk action type">
                                        <option selected disabled>Choose action</option>
                                        <option value="move">Move to Camp</option>
                                        <option value="markSold">Mark as Sold</option>
                                        <option value="markInactive">Mark as Inactive</option>
                                        <option value="markAactive">Mark as Active</option>
                                    </select>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <input type="text" class="form-control" id="bulkActionValueSheep" name="reason" placeholder="Camp # or Reason" aria-label="Action value">
                                </div>
                                <div class="col-md-4 mb-2">
                                    <button type="submit" class="btn btn-warning w-100" onclick="performBulkActionSheep()">
                                        <i class="fas fa-bolt"></i> Apply
                                    </button>
                                </div>
                            </div>

                        <small class="text-muted">Select sheep using checkboxes in the table above.</small>
                    </div>
                </div>
            </form>
            <!-- Quick Actions -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-lightning-bolt me-2"></i>Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="AddSheep" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Add New Sheep
                                </a>
                                <button class="btn btn-outline-primary" onclick="exportSheepData()">
                                    <i class="fas fa-download me-2"></i>Export Data
                                </button>
                                <button class="btn btn-outline-info" onclick="generateReport()">
                                    <i class="fas fa-chart-bar me-2"></i>Generate Report
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-warning text-white">
                            <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Sheep Management Tips</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li><i class="fas fa-check text-success me-2"></i>Regular health checks</li>
                                <li><i class="fas fa-check text-success me-2"></i>Monitor grazing patterns</li>
                                <li><i class="fas fa-check text-success me-2"></i>Track breeding cycles</li>
                                <li><i class="fas fa-check text-success me-2"></i>Maintain camp rotation</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
    <!-- Sheep management functionality is now handled in site.js -->
        </main>
    </div>
</div>

<script>
    function removeSheep(sheepId) {
        if (confirm('Are you sure you want to remove this sheep? This action cannot be undone.')) {
            alert(`Sheep ${sheepId} removed successfully`);
            location.reload();
        }
    }

    function exportSheepData() {
        alert('Export feature coming soon!');
    }

    function generateReport() {
        alert('Report generation feature coming soon!');
    }
</script>

<style>
    .sheep-select {
        width: 18px;
        height: 18px;
        accent-color: var(--medium-green);
        margin-right: 4px;
    }
    .sidebar {
        min-height: 100vh;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        margin: 0.125rem 0.5rem;
        transition: all 0.3s ease;
    }
    
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--orange-yellow) !important;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .border-left-primary {
        border-left: 0.25rem solid #007bff !important;
    }
    
    .border-left-success {
        border-left: 0.25rem solid var(--medium-green) !important;
    }
    
    .border-left-info {
        border-left: 0.25rem solid var(--orange-yellow) !important;
    }
    
    .border-left-warning {
        border-left: 0.25rem solid var(--burnt-orange) !important;
    }
    
    .text-primary {
        color: #007bff !important;
    }
    
    .text-success {
        color: var(--medium-green) !important;
    }
    
    .text-info {
        color: var(--orange-yellow) !important;
    }
    
    .text-warning {
        color: var(--burnt-orange) !important;
    }
    
    .text-gray-800 {
        color: var(--dark-gray) !important;
    }
    
    .btn {
        border-radius: 10px;
        font-weight: 600;
    }
    
    .badge.bg-pink {
        background-color: #e83e8c !important;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: var(--dark-gray);
    }
    
    .img-thumbnail {
        border-radius: 10px;
    }
</style>