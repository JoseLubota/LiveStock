@model IEnumerable<LiveStock.Core.Models.Note>

@{
    ViewData["Title"] = "Notes";
    Layout = "_Layout";
    var categories = new List<string> { "Sheep", "Cow", "Tasks", "Camps", "Finance", "Staff" };
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3 management-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Dashboard" ? "active" : "")" asp-action="Dashboard" aria-current="@(currentAction == "Dashboard" ? "page" : null)">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Sheep" ? "active" : "")" asp-action="Sheep" aria-current="@(currentAction == "Sheep" ? "page" : null)">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Cows" ? "active" : "")" asp-action="Cows" aria-current="@(currentAction == "Cows" ? "page" : null)">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Camps" ? "active" : "")" asp-action="Camps" aria-current="@(currentAction == "Camps" ? "page" : null)">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Staff" ? "active" : "")" asp-action="Staff" aria-current="@(currentAction == "Staff" ? "page" : null)">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Tasks" ? "active" : "")" asp-action="Tasks" aria-current="@(currentAction == "Tasks" ? "page" : null)">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Water" ? "active" : "")" asp-action="Water" aria-current="@(currentAction == "Water" ? "page" : null)">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Assets" ? "active" : "")" asp-action="Assets" aria-current="@(currentAction == "Assets" ? "page" : null)">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Finance" ? "active" : "")" asp-action="Finance" aria-current="@(currentAction == "Finance" ? "page" : null)">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Notes" ? "active" : "")" asp-action="Notes" aria-current="@(currentAction == "Notes" ? "page" : null)">
                            <i class="fas fa-sticky-note me-2"></i>
                            Notes
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="module-hero" style="background-image: url('@Url.Content("~/Images/IMG-20251025-WA0032.jpg")'); background-size: cover; background-position: center; border-radius: 12px; position: relative; margin-bottom: 1rem;">
                <div class="module-overlay"></div>
                <div class="module-hero-content">
                    <h2 class="h3 mb-1">Notes</h2>
                    <p class="mb-0">Capture and review notes by category.</p>
                </div>
            </div>
            <style>
                .module-hero { position: relative; min-height: 220px; }
                .module-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.35); border-radius: 12px; }
                .module-hero-content { position: relative; z-index: 1; color: #fff; padding: 1.25rem 1.5rem; }
            </style>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Notes</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <span class="text-muted">Welcome, @Context.Session.GetString("UserName")</span>
                    </div>
                </div>
            </div>

            <!-- Create Note Form -->
            <div class="card mb-4">
                <div class="card-header bg-dark-green text-white">Create New Note</div>
                <div class="card-body">
                    <form asp-action="CreateNote" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Title</label>
                                <input type="text" name="Title" class="form-control" required maxlength="100" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Category</label>
                                <select name="Category" class="form-select" required>
                                    @foreach (var cat in categories)
                                    {
                                        <option value="@cat">@cat</option>
                                    }
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Content</label>
                                <textarea name="Content" class="form-control" rows="4" required maxlength="4000"></textarea>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success">Save Note</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Notes by Category -->
            @foreach (var cat in categories)
            {
                var catNotes = Model.Where(n => n.Category == cat).ToList();
                <div class="mb-4">
                    <h4 class="border-bottom pb-2">@cat Notes (@catNotes.Count)</h4>
                    @if (catNotes.Count == 0)
                    {
                        <p class="text-muted">No notes yet for @cat.</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var note in catNotes)
                            {
                                <div class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@note.Title</h5>
                                        <small class="text-muted">@note.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                                    </div>
                                    <p class="mb-1">@note.Content</p>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </main>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-2">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Management" asp-action="Dashboard">Management</a></li>
    <li class="breadcrumb-item active" aria-current="page">Notes</li>
  </ol>
</nav>