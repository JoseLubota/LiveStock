@model LiveStock.Core.Models.Cow

@{
    ViewData["Title"] = "Cow Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Sheep">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" asp-action="Cows">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Camps">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Staff">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Tasks">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Water">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Assets">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Finance">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Notes">
                            <i class="fas fa-sticky-note me-2"></i>
                            Notes
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Cow Details</h1>
                <div>
                    <a asp-action="Cows" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Cow List
                    </a>
                    <button class="btn btn-warning me-2" onclick="editCow(@Model.Id)">
                        <i class="fas fa-edit me-2"></i>Edit
                    </button>
                    <button class="btn btn-danger" onclick="removeCow(@Model.Id)">
                        <i class="fas fa-trash me-2"></i>Remove
                    </button>
                </div>
            </div>

            <div class="row">
                <!-- Cow Information -->
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Ear Tag:</label>
                                        <p class="form-control-plaintext">@(Model.EarTag ?? "Not specified")</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Breed:</label>
                                        <p class="form-control-plaintext">@Model.Breed</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Birth Date:</label>
                                        <p class="form-control-plaintext">@Model.BirthDate</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Gender:</label>
                                        <p class="form-control-plaintext">
                                            @if (Model.Gender == "Male")
                                            {
                                                <span class="badge bg-primary">@Model.Gender</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-pink">@Model.Gender</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Current Camp:</label>
                                        <p class="form-control-plaintext">
                                            <span class="badge bg-info">Camp @Model.Camp?.CampNumber</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Price:</label>
                                        <p class="form-control-plaintext text-success">R @Model.Price.ToString("N2")</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Pregnancy Status:</label>
                                        <p class="form-control-plaintext">
                                            @if (Model.IsPregnant)
                                            {
                                                <span class="badge bg-pink">Pregnant</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Not Pregnant</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Expected Calving:</label>
                                        <p class="form-control-plaintext">
                                            @(Model.ExpectedCalvingDate?.ToString("MM/dd/yyyy") ?? "Not specified")
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Notes:</label>
                                <p class="form-control-plaintext">@(Model.Notes ?? "No notes available")</p>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Status:</label>
                                        <p class="form-control-plaintext">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Added:</label>
                                        <p class="form-control-plaintext">@Model.CreatedAt.ToString("MM/dd/yyyy")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Medical Records -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-warning text-white">
                            <h5 class="mb-0"><i class="fas fa-stethoscope me-2"></i>Medical Records</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.MedicalRecords.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Treatment</th>
                                                <th>Veterinarian</th>
                                                <th>Cost</th>
                                                <th>Notes</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var record in Model.MedicalRecords)
                                            {
                                                <tr>
                                                    <td>@record.TreatmentDate.ToString("MM/dd/yyyy")</td>
                                                    <td>@record.Treatment</td>
                                                    <td>@(record.Veterinarian ?? "-")</td>
                                                    <td>@(record.Cost?.ToString("C") ?? "-")</td>
                                                    <td>@(record.Notes ?? "-")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center">No medical records found for this cow.</p>
                            }
                        </div>
                    </div>

                    <!-- Camp Movements -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-route me-2"></i>Camp Movement History</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.CampMovements.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>From Camp</th>
                                                <th>To Camp</th>
                                                <th>Reason</th>
                                                <th>Notes</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var movement in Model.CampMovements)
                                            {
                                                <tr>
                                                    <td>@movement.MovementDate.ToString("MM/dd/yyyy")</td>
                                                    <td>
                                                        <span class="badge bg-secondary">Camp @movement.FromCamp?.CampNumber</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary">Camp @movement.ToCamp?.CampNumber</span>
                                                    </td>
                                                    <td>@(movement.Reason ?? "-")</td>
                                                    <td>@(movement.Notes ?? "-")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center">No camp movements recorded for this cow.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Sidebar Information -->
                <div class="col-lg-4">
                    <!-- Photo Section -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="fas fa-camera me-2"></i>Photo</h6>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                            {
                                <img src="@Model.PhotoUrl" alt="Cow Photo" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
                            }
                            else
                            {
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 200px; height: 200px; border-radius: 10px; margin: 0 auto;">
                                    <i class="fas fa-cow fa-4x"></i>
                                </div>
                                <p class="text-muted mt-2">No photo available</p>
                            }
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-warning text-white">
                            <h6 class="mb-0"><i class="fas fa-tools me-2"></i>Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary" onclick="addMedicalRecord(@Model.Id)">
                                    <i class="fas fa-plus me-2"></i>Add Medical Record
                                </button>
                                <button class="btn btn-outline-info" onclick="moveToCamp(@Model.Id)">
                                    <i class="fas fa-exchange-alt me-2"></i>Move to Camp
                                </button>
                                <button class="btn btn-outline-success" onclick="updatePhoto(@Model.Id)">
                                    <i class="fas fa-camera me-2"></i>Update Photo
                                </button>
                                @if (Model.Gender == "Female")
                                {
                                    <button class="btn btn-outline-pink" onclick="updatePregnancyStatus(@Model.Id)">
                                        <i class="fas fa-baby me-2"></i>Update Pregnancy
                                    </button>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Statistics -->
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistics</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <h5 class="text-primary">@Model.MedicalRecords.Count</h5>
                                    <small class="text-muted">Medical Records</small>
                                </div>
                                <div class="col-6">
                                    <h5 class="text-success">@Model.CampMovements.Count</h5>
                                    <small class="text-muted">Camp Moves</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="addMedicalRecordModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Medical Record</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-action="AddMedicalRecord" method="post">
        <div class="modal-body">
          <input type="hidden" name="animalId" value="@Model.Id" />
          <input type="hidden" name="animalType" value="Cow" />
          <div class="mb-3">
            <label class="form-label">Treatment Date</label>
            <input type="date" class="form-control" name="TreatmentDate" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Treatment</label>
            <input type="text" class="form-control" name="Treatment" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Veterinarian</label>
            <input type="text" class="form-control" name="Veterinarian" />
          </div>
          <div class="mb-3">
            <label class="form-label">Cost</label>
            <input type="number" step="0.01" class="form-control" name="Cost" />
          </div>
          <div class="mb-3">
            <label class="form-label">Notes</label>
            <textarea class="form-control" name="Notes" rows="2"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
  </div>

<div class="modal fade" id="moveToCampModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Move Cow to Camp</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-action="MoveAnimal" method="post">
        <div class="modal-body">
          <input type="hidden" name="animalId" value="@Model.Id" />
          <input type="hidden" name="animalType" value="Cow" />
          <input type="hidden" name="fromCampId" value="@Model.CampId" />
          <div class="mb-3">
            <label class="form-label">To Camp</label>
            <select class="form-select" name="toCampId" required>
              @foreach (var camp in (IEnumerable<LiveStock.Core.Models.Camp>)ViewBag.Camps)
              {
                  <option value="@camp.Id">Camp @camp.CampNumber - @camp.Name</option>
              }
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Reason (optional)</label>
            <input type="text" class="form-control" name="reason" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-info">Move</button>
        </div>
      </form>
    </div>
  </div>
  </div>

<div class="modal fade" id="updatePhotoModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Photo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-action="UpdateCowPhoto" method="post" enctype="multipart/form-data">
        <div class="modal-body">
          <input type="hidden" name="id" value="@Model.Id" />
          <div class="mb-3">
            <input type="file" class="form-control" name="Photo" accept="image/*" required />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Upload</button>
        </div>
      </form>
    </div>
  </div>
  </div>

<div class="modal fade" id="pregnancyStatusModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Pregnancy Status</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-action="UpdatePregnancyStatus" method="post">
        <div class="modal-body">
          <input type="hidden" name="id" value="@Model.Id" />
          <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" id="isPregnantSwitch" name="isPregnant" @(Model.IsPregnant ? "checked" : "") />
            <label class="form-check-label" for="isPregnantSwitch">Pregnant</label>
          </div>
          <div class="mb-3">
            <label class="form-label">Expected Calving Date</label>
            <input type="date" class="form-control" name="expectedCalvingDate" value="@Model.ExpectedCalvingDate?.ToString("yyyy-MM-dd")" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning">Update</button>
        </div>
      </form>
    </div>
  </div>
  </div>

<script>
    function editCow(cowId) {
        window.location.href = '@Url.Action("CowEditDetails")' + '?id=' + cowId;
    }

    function removeCow(cowId) {
        if (confirm('Are you sure you want to remove this cow? This action cannot be undone.')) {
            alert(`Cow ${cowId} removed successfully`);
            window.location.href = '@Url.Action("Cows")';
        }
    }

    function addMedicalRecord(cowId) {
        const modal = new bootstrap.Modal(document.getElementById('addMedicalRecordModal'));
        modal.show();
    }

    function moveToCamp(cowId) {
        const modal = new bootstrap.Modal(document.getElementById('moveToCampModal'));
        modal.show();
    }

    function updatePhoto(cowId) {
        const modal = new bootstrap.Modal(document.getElementById('updatePhotoModal'));
        modal.show();
    }

    function updatePregnancyStatus(cowId) {
        const modal = new bootstrap.Modal(document.getElementById('pregnancyStatusModal'));
        modal.show();
    }
</script>

