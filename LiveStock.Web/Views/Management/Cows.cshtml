@model IEnumerable<LiveStock.Core.Models.Cow>

@{
    ViewData["Title"] = "Cow Management";
    Layout = "_Layout";
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3 management-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Dashboard" ? "active" : "")" asp-action="Dashboard" aria-current="@(currentAction == "Dashboard" ? "page" : null)">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Sheep" ? "active" : "")" asp-action="Sheep" aria-current="@(currentAction == "Sheep" ? "page" : null)">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Cows" ? "active" : "")" asp-action="Cows" aria-current="@(currentAction == "Cows" ? "page" : null)">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Camps" ? "active" : "")" asp-action="Camps" aria-current="@(currentAction == "Camps" ? "page" : null)">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Staff" ? "active" : "")" asp-action="Staff" aria-current="@(currentAction == "Staff" ? "page" : null)">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Tasks" ? "active" : "")" asp-action="Tasks" aria-current="@(currentAction == "Tasks" ? "page" : null)">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Water" ? "active" : "")" asp-action="Water" aria-current="@(currentAction == "Water" ? "page" : null)">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Assets" ? "active" : "")" asp-action="Assets" aria-current="@(currentAction == "Assets" ? "page" : null)">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Finance" ? "active" : "")" asp-action="Finance" aria-current="@(currentAction == "Finance" ? "page" : null)">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Notes" ? "active" : "")" asp-action="Notes" aria-current="@(currentAction == "Notes" ? "page" : null)">
                            <i class="fas fa-sticky-note me-2"></i>
                            Notes
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="module-hero" style="background-image: url('@Url.Content("~/Images/IMG-20251025-WA0036.jpg")'); background-size: cover; background-position: center; border-radius: 12px; position: relative; margin-bottom: 1rem;">
                <div class="module-overlay"></div>
                <div class="module-hero-content">
                    <h2 class="h3 mb-1">Cow Management</h2>
                    <p class="mb-0">Monitor herd health, value, and inventory.</p>
                </div>
            </div>
            <style>
                .module-hero { position: relative; min-height: 220px; }
                .module-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.35); border-radius: 12px; }
                .module-hero-content { position: relative; z-index: 1; color: #fff; padding: 1.25rem 1.5rem; }
            </style>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Cow Management</h1>
                <a asp-action="AddCow" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add Cow
                </a>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Cows
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.Count()
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-cow fa-2x text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Active Cows
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.Count(c => c.IsActive)
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Total Value
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        $@Model.Sum(c => c.Price).ToString("N2")
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-info"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Average Age
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        <!--   (Model.Any() ? Model.Average(c => c.BirthDate).ToString("F1") : "0") years -->
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar fa-2x text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cow List -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="fas fa-list me-2"></i>Cow Inventory</h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="d-flex flex-wrap align-items-center gap-2 mb-2">
                            <input id="cowSearch" class="form-control form-control-sm w-auto" placeholder="Search cows..." data-role="table-search" data-target="#cowsTable" />
                            <span class="ms-2 small text-muted">Status:</span>
                            @{ var cowStatuses = Model.Select(c => c.Status).Where(s => !string.IsNullOrWhiteSpace(s)).Distinct().ToList(); }
                            @foreach (var st in cowStatuses)
                            {
                                <button type="button" class="btn btn-sm btn-outline-secondary filter-chip" data-target="#cowsTable" data-filter="status" data-value="@st">@st</button>
                            }
                            <span class="ms-2 small text-muted">Camp:</span>
                            @{ var cowCamps = Model.Select(c => c.CampId).Distinct().ToList(); }
                            @foreach (var camp in cowCamps)
                            {
                                <button type="button" class="btn btn-sm btn-outline-secondary filter-chip" data-target="#cowsTable" data-filter="camp" data-value="@camp">Camp @camp</button>
                            }
                            <span class="ms-2 small text-muted">Pregnant:</span>
                            <button type="button" class="btn btn-sm btn-outline-secondary filter-chip" data-target="#cowsTable" data-filter="pregnant" data-value="Yes">Yes</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary filter-chip" data-target="#cowsTable" data-filter="pregnant" data-value="No">No</button>
                            <button type="button" class="btn btn-sm btn-outline-primary density-toggle" data-target="#cowsTable">Compact density</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary clear-filters" data-target="#cowsTable">Clear filters</button>
                        </div>
                        <div class="table-responsive">
                            <table id="cowsTable" class="table table-striped table-hover table-sticky">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" id="selectAllCows" aria-label="Select all cows" /></th>
                                        <th>Photo</th>
                                        <th>Ear Tag</th>
                                        <th>Breed</th>
                                        <th>Age</th>
                                        <th>Camp</th>
                                        <th>Gender</th>
                                        <th>Price</th>
                                        <th>Pregnant</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cow in Model)
                                    {
                                        <tr data-status="@cow.Status" data-camp="@cow.CampId" data-pregnant="@(cow.IsPregnant ? "Yes" : "No")">
                                            <td><input type="checkbox" class="cow-select" value="@cow.Id" aria-label="Select cow @cow.EarTag" /></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(cow.PhotoUrl))
                                                {
                                                    <img src="@cow.PhotoUrl" alt="Cow Photo" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; border-radius: 5px;">
                                                        <i class="fas fa-cow"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>@(cow.EarTag ?? "-")</td>
                                            <td>@cow.Breed</td>
                                            <td>@cow.BirthDate years</td>
                                            <td>
                                                <span class="badge bg-info">Camp @cow.Camp?.CampNumber</span>
                                            </td>
                                            <td>
                                                @if (cow.Gender == "Male")
                                                {
                                                    <span class="badge bg-primary">@cow.Gender</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-pink">@cow.Gender</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-success">$@cow.Price.ToString("N2")</span>
                                            </td>
                                            <td>
                                                @if (cow.IsPregnant)
                                                {
                                                    <span class="badge bg-warning">Pregnant</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </td>
                                            <td>
                                                @{ var s = cow.Status ?? (cow.IsActive ? "Active" : "Inactive"); var cls = (s.IndexOf("active", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-success" : (s.IndexOf("vacc", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-info" : (s.IndexOf("pending", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-warning" : (s.IndexOf("inactive", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-danger" : "bg-secondary"; }
                                                <span class="badge @cls">@s</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="CowDetails" asp-route-id="@cow.Id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-warning" onclick="editCow(@cow.Id)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-danger" onclick="removeCow(@cow.Id)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-cow fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">No Cows Found</h5>
                            <p class="text-muted">Start building your herd by adding your first cow!</p>
                            <a asp-action="AddCow" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>Add Your First Cow
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Bulk actions for cows -->
            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="fas fa-tasks me-2"></i>Bulk Actions</h6>
                </div>
                <div class="card-body">
                    <form id="bulkActionsForm">
                        <div class="row align-items-center">
                            <div class="col-md-4 mb-2">
                                <select class="form-select" id="bulkActionType" aria-label="Bulk action type">
                                    <option selected disabled>Choose action</option>
                                    <option value="move">Move to Camp</option>
                                    <option value="markSold">Mark as Sold</option>
                                    <option value="markInactive">Mark as Inactive</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-2">
                                <input type="text" class="form-control" id="bulkActionValue" placeholder="Camp # or Reason" aria-label="Action value">
                            </div>
                            <div class="col-md-4 mb-2">
                                <button type="button" class="btn btn-warning w-100" onclick="performBulkAction()">
                                    <i class="fas fa-bolt"></i> Apply
                                </button>
                            </div>
                        </div>
                    </form>
                    <small class="text-muted">Select cows using checkboxes in the table below.</small>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-lightning-bolt me-2"></i>Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="AddCow" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Add New Cow
                                </a>
                                <button class="btn btn-outline-primary" onclick="exportCowData()">
                                    <i class="fas fa-download me-2"></i>Export Data
                                </button>
                                <button class="btn btn-outline-info" onclick="generateReport()">
                                    <i class="fas fa-chart-bar me-2"></i>Generate Report
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-warning text-white">
                            <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Cow Management Tips</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li><i class="fas fa-check text-success me-2"></i>Regular health checks</li>
                                <li><i class="fas fa-check text-success me-2"></i>Monitor grazing patterns</li>
                                <li><i class="fas fa-check text-success me-2"></i>Track breeding cycles</li>
                                <li><i class="fas fa-check text-success me-2"></i>Maintain camp rotation</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script>
    function editCow(cowId) {
        alert(`Edit cow ${cowId} - Feature coming soon!`);
    }

    function removeCow(cowId) {
        if (confirm('Are you sure you want to remove this cow? This action cannot be undone.')) {
            alert(`Cow ${cowId} removed successfully`);
            location.reload();
        }
    }

    function exportCowData() {
        alert('Export feature coming soon!');
    }

    function generateReport() {
        alert('Report generation feature coming soon!');
    }

    // Bulk actions logic
    function performBulkAction() {
        const actionType = document.getElementById('bulkActionType').value;
        const actionValue = document.getElementById('bulkActionValue').value;
        const selectedCows = Array.from(document.querySelectorAll('.cow-select:checked')).map(cb => cb.value);
        if (!actionType || selectedCows.length === 0) {
            alert('Please select an action and at least one cow.');
            return;
        }
        // In a real app, send AJAX request to backend
        alert(`Action '${actionType}' applied to cows: ${selectedCows.join(', ')}${actionValue ? ' with value: ' + actionValue : ''}`);
    }

    // Cow management functionality is now handled in site.js
</script>

<!-- Page-specific styles for Cows Management -->
<link rel="stylesheet" href="~/css/cows.css" />