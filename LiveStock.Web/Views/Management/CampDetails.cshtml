@model LiveStock.Core.Models.Camp

@{
    ViewData["Title"] = "Camp Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Sheep">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Cows">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" asp-action="Camps">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Staff">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Tasks">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Water">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Assets">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Finance">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Notes">
                            <i class="fas fa-sticky-note me-2"></i>
                            Notes
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Camp @Model.CampNumber Details</h1>
                <div>
                    <a asp-action="Camps" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Camps
                    </a>
                    <button class="btn btn-warning" onclick="editCamp(@Model.Id)">
                        <i class="fas fa-edit me-2"></i>Edit Camp
                    </button>
                </div>
            </div>

            <div class="row">
                <!-- Camp Information -->
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Camp Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Camp Name:</label>
                                        <p class="form-control-plaintext">@Model.Name</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Camp Number:</label>
                                        <p class="form-control-plaintext">
                                            <span class="badge bg-primary">@Model.CampNumber</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Size:</label>
                                        <p class="form-control-plaintext">@Model.Hectares hectares</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Total Area:</label>
                                        <p class="form-control-plaintext">@(Model.Hectares * 2.471) acres</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Description:</label>
                                <p class="form-control-plaintext">@(Model.Description ?? "No description available")</p>
                            </div>
                        </div>
                    </div>

                    <!-- Livestock in Camp -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-paw me-2"></i>Livestock in Camp</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card border-left-info mb-3">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                        Sheep
                                                    </div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                        @Model.Sheep.Count(s => s.IsActive)
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fas fa-sheep fa-2x text-info"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="card border-left-warning mb-3">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                        Cows
                                                    </div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                        @Model.Cows.Count(c => c.IsActive)
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fas fa-cow fa-2x text-warning"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (Model.Sheep.Any() || Model.Cows.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>Breed</th>
                                                <th>Age</th>
                                                <th>Gender</th>
                                                <th>Value</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var sheep in Model.Sheep.Where(s => s.IsActive))
                                            {
                                                <tr>
                                                    <td><span class="badge bg-info">Sheep</span></td>
                                                    <td>@sheep.Breed</td>
                                                    <td>@sheep.BirthDate years</td>
                                                    <td>@sheep.Gender</td>
                                                    <td>$@sheep.Price.ToString("N2")</td>
                                                    <td>
                                                        <a asp-action="SheepDetails" asp-route-id="@sheep.Id" class="btn btn-sm btn-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                            @foreach (var cow in Model.Cows.Where(c => c.IsActive))
                                            {
                                                <tr>
                                                    <td><span class="badge bg-warning">Cow</span></td>
                                                    <td>@cow.Breed</td>
                                                    <td>@cow.BirthDate years</td>
                                                    <td>@cow.Gender</td>
                                                    <td>$@cow.Price.ToString("N2")</td>
                                                    <td>
                                                        <a asp-action="CowDetails" asp-route-id="@cow.Id" class="btn btn-sm btn-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center">No livestock currently in this camp.</p>
                            }
                        </div>
                    </div>

                    <!-- Recent Rainfall -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-tint me-2"></i>Recent Rainfall</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.RainfallRecords.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Amount (ml)</th>
                                                <th>Notes</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var rainfall in Model.RainfallRecords.OrderByDescending(r => r.RainfallDate).Take(10))
                                            {
                                                <tr>
                                                    <td>@rainfall.RainfallDate.ToString("MM/dd/yyyy")</td>
                                                    <td>@rainfall.AmountMl ml</td>
                                                    <td>@(rainfall.Notes ?? "-")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center">No rainfall records for this camp.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Sidebar Information -->
                <div class="col-lg-4">
                    <!-- Camp Statistics -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Camp Statistics</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <h5 class="text-primary">@Model.Sheep.Count(s => s.IsActive)</h5>
                                    <small class="text-muted">Active Sheep</small>
                                </div>
                                <div class="col-6">
                                    <h5 class="text-warning">@Model.Cows.Count(c => c.IsActive)</h5>
                                    <small class="text-muted">Active Cows</small>
                                </div>
                            </div>
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <h5 class="text-info">@Model.RainfallRecords.Count</h5>
                                    <small class="text-muted">Rainfall Records</small>
                                </div>
                                <div class="col-6">
                                    <h5 class="text-success">@Model.CampMovements.Count</h5>
                                    <small class="text-muted">Movements</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-warning text-white">
                            <h6 class="mb-0"><i class="fas fa-tools me-2"></i>Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary" onclick="addRainfall(@Model.Id)">
                                    <i class="fas fa-plus me-2"></i>Add Rainfall
                                </button>
                                <button class="btn btn-outline-info" onclick="moveLivestock(@Model.Id)">
                                    <i class="fas fa-exchange-alt me-2"></i>Move Livestock
                                </button>
                                <button class="btn btn-outline-success" onclick="viewCampMap(@Model.Id)">
                                    <i class="fas fa-map me-2"></i>View Map
                                </button>
                                <button class="btn btn-outline-warning" onclick="addLivestock(@Model.Id)">
                                    <i class="fas fa-plus-circle me-2"></i>Add Livestock
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Camp Health -->
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-heartbeat me-2"></i>Camp Health</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Stocking Density:</label>
                                @{
                                    var totalLivestock = Model.Sheep.Count(s => s.IsActive) + Model.Cows.Count(c => c.IsActive);
                                    var hectaresPerAnimal = Model.Hectares / (totalLivestock > 0 ? totalLivestock : 1);
                                }
                                <div class="progress mb-2">
                                    @{
                                        var densityPercentage = Math.Min((totalLivestock / Model.Hectares) * 100, 100);
                                        var densityClass = densityPercentage > 80 ? "bg-danger" : densityPercentage > 60 ? "bg-warning" : "bg-success";
                                    }
                                    <div class="progress-bar @densityClass" style="width: @densityPercentage%"></div>
                                </div>
                                <small class="text-muted">@hectaresPerAnimal.ToString("F1") hectares per animal</small>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Recent Activity:</label>
                                <p class="text-muted small">
                                    @if (Model.CampMovements.Any())
                                    {
                                        var lastMovement = Model.CampMovements.OrderByDescending(m => m.MovementDate).First();
                                        <span>Last movement: @lastMovement.MovementDate.ToString("MM/dd/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span>No recent movements</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Add Rainfall Modal -->
<div class="modal fade" id="addRainfallModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add Rainfall</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddRainfallForCamp" method="post">
                    <input type="hidden" name="campId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Rainfall Amount (ml):</label>
                        <input type="number" class="form-control" name="amountMl" min="0" step="0.1" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes (optional):</label>
                        <textarea class="form-control" name="notes" rows="2"></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Rainfall</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Move Livestock Modal -->
<div class="modal fade" id="moveLivestockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Move Livestock</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="MoveAnimal" method="post">
                    <input type="hidden" name="fromCampId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Animal Type:</label>
                        <select class="form-control" name="animalType" required>
                            <option value="">Select Animal Type</option>
                            <option value="Sheep">Sheep</option>
                            <option value="Cow">Cow</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Animal ID:</label>
                        <input type="number" class="form-control" name="animalId" placeholder="Enter animal ID" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To Camp:</label>
                        <select class="form-control" name="toCampId" required>
                            <option value="">Select Destination Camp</option>
                            @{ var allCamps = ViewBag.Camps as List<LiveStock.Core.Models.Camp>; }
                            @foreach (var c in allCamps.OrderBy(c => c.CampNumber))
                            {
                                <option value="@c.Id">Camp @c.CampNumber</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason (optional):</label>
                        <textarea class="form-control" name="reason" rows="2"></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Move</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add Livestock Modal -->
<div class="modal fade" id="addLivestockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title">Add Livestock</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddLivestockToCamp" method="post">
+                    @Html.AntiForgeryToken()
                     <input type="hidden" name="campId" value="@Model.Id" />
                     <div class="mb-3">
                         <label class="form-label">Animal Type:</label>
                         <select class="form-control" name="animalType" id="animalType" required>
                             <option value="">Select Animal Type</option>
                             <option value="Sheep">Sheep</option>
                             <option value="Cow">Cow</option>
                         </select>
                     </div>
                    <div class="mb-3">
                        <label class="form-label">Breed:</label>
                        <input type="text" class="form-control" name="Breed" placeholder="Enter breed" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Birth Date:</label>
                                <input type="date" class="form-control" name="BirthDate" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Gender:</label>
                                <select class="form-control" name="Gender" required>
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price:</label>
                        <div class="input-group">
                            <span class="input-group-text">R</span>
                            <input type="number" class="form-control" name="Price" step="0.01" min="0" required />
                        </div>
                    </div>
                    <div id="cowFields" style="display:none;">
                        <div class="mb-3">
                            <label class="form-label">Ear Tag (optional):</label>
                            <input type="text" class="form-control" name="EarTag" />
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="isPregnantCheck" name="IsPregnant" />
                            <label class="form-check-label" for="isPregnantCheck">Is Pregnant</label>
                        </div>
                        <div class="mb-3" id="calvingDateDiv" style="display:none;">
                            <label class="form-label">Expected Calving Date:</label>
                            <input type="date" class="form-control" name="ExpectedCalvingDate" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes (optional):</label>
                        <textarea class="form-control" name="Notes" rows="2"></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-warning">Add Livestock</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function editCamp(campId) {
        const modal = new bootstrap.Modal(document.getElementById('editCampModal'));
        modal.show();
    }

    function addRainfall(campId) {
        const modal = new bootstrap.Modal(document.getElementById('addRainfallModal'));
        modal.show();
    }

    function moveLivestock(campId) {
        const modal = new bootstrap.Modal(document.getElementById('moveLivestockModal'));
        modal.show();
    }

    function viewCampMap(campId) {
        alert(`View map for camp ${campId} - Feature coming soon!`);
    }

    function addLivestock(campId) {
        const modal = new bootstrap.Modal(document.getElementById('addLivestockModal'));
        const animalTypeSelect = document.getElementById('animalType');
        const cowFields = document.getElementById('cowFields');
        const isPregnantCheck = document.getElementById('isPregnantCheck');
        const calvingDateDiv = document.getElementById('calvingDateDiv');

        if (animalTypeSelect) {
            animalTypeSelect.addEventListener('change', function() {
                if (this.value === 'Cow') {
                    cowFields.style.display = 'block';
                } else {
                    cowFields.style.display = 'none';
                }
            });
        }

        if (isPregnantCheck) {
            isPregnantCheck.addEventListener('change', function() {
                calvingDateDiv.style.display = this.checked ? 'block' : 'none';
            });
        }

        modal.show();
    }
</script>

