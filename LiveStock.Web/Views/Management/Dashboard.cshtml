@model LiveStock.Web.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard - LiveStock Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item d-flex align-items-center mb-3">
                        <img src="/images/user-avatar.png" alt="User Avatar" class="rounded-circle me-2" style="width:40px;height:40px;object-fit:cover;">
                        <span class="text-white fw-bold">@Context.Session.GetString("UserName")</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Sheep">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Cows">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Camps">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Staff">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Tasks">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Water">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Assets">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Finance">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Farm Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <span class="text-muted">Welcome, @Context.Session.GetString("UserName")</span>
                    </div>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Sheep
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalSheep</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-sheep fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Total Cows
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalCows</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-cow fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Total Staff
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalStaff</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Pending Tasks
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingTasks</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-tasks fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="row mb-4">
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>Livestock Trends</h6>
                        </div>
                        <div class="card-body">
                            <canvas id="livestockChart" height="120"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header bg-warning text-white">
                            <h6 class="mb-0"><i class="fas fa-cloud-rain me-2"></i>Rainfall Trends</h6>
                        </div>
                        <div class="card-body">
                            <canvas id="rainfallChart" height="120"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Rainfall -->
            <div class="row">
                <div class="col-lg-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Recent Rainfall</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.RecentRainfall.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Camp</th>
                                                <th>Amount</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var rainfall in Model.RecentRainfall)
                                            {
                                                <tr>
                                                    <td>Camp @rainfall.Camp.CampNumber</td>
                                                    <td>@rainfall.AmountMl ml</td>
                                                    <td>@rainfall.RainfallDate.ToString("MM/dd/yyyy")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No recent rainfall records.</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <a asp-action="AddSheep" class="btn btn-success btn-block w-100">
                                        <i class="fas fa-plus me-2"></i>Add Sheep
                                    </a>
                                </div>
                                <div class="col-6 mb-3">
                                    <a asp-action="AddCow" class="btn btn-info btn-block w-100">
                                        <i class="fas fa-plus me-2"></i>Add Cow
                                    </a>
                                </div>
                                <div class="col-6 mb-3">
                                    <a asp-action="CreateTask" class="btn btn-warning btn-block w-100">
                                        <i class="fas fa-plus me-2"></i>Create Task
                                    </a>
                                </div>
                                <div class="col-6 mb-3">
                                    <a asp-action="AddStaff" class="btn btn-primary btn-block w-100">
                                        <i class="fas fa-plus me-2"></i>Add Staff
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctxLivestock = document.getElementById('livestockChart').getContext('2d');
    var livestockChart = new Chart(ctxLivestock, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'Sheep',
                data: [120, 130, 125, 140, 150, 160],
                borderColor: '#4E7145',
                backgroundColor: 'rgba(78,113,69,0.1)',
                fill: true
            }, {
                label: 'Cows',
                data: [80, 85, 90, 95, 100, 110],
                borderColor: '#EB9C35',
                backgroundColor: 'rgba(235,156,53,0.1)',
                fill: true
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'top' } }
        }
    });

    var ctxRainfall = document.getElementById('rainfallChart').getContext('2d');
    var rainfallChart = new Chart(ctxRainfall, {
        type: 'bar',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'Rainfall (ml)',
                data: [30, 45, 60, 40, 55, 70],
                backgroundColor: '#13341E'
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { display: false } }
        }
    });
</script>

<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        margin: 0.125rem 0.5rem;
        transition: all 0.3s ease;
    }
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--orange-yellow) !important;
    }
    .sidebar .nav-item img {
        border: 2px solid var(--medium-green);
    }
    .border-left-primary {
        border-left: 0.25rem solid var(--medium-green) !important;
    }
    
    .border-left-success {
        border-left: 0.25rem solid var(--medium-green) !important;
    }
    
    .border-left-info {
        border-left: 0.25rem solid var(--orange-yellow) !important;
    }
    
    .border-left-warning {
        border-left: 0.25rem solid var(--burnt-orange) !important;
    }
    
    .text-primary {
        color: var(--medium-green) !important;
    }
    
    .text-success {
        color: var(--medium-green) !important;
    }
    
    .text-info {
        color: var(--orange-yellow) !important;
    }
    
    .text-warning {
        color: var(--burnt-orange) !important;
    }
    
    .text-gray-800 {
        color: var(--dark-gray) !important;
    }
    
    .text-gray-300 {
        color: #b7b9cc !important;
    }
</style>