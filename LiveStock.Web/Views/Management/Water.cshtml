@model IEnumerable<LiveStock.Core.Models.RainfallRecord>

@{
    ViewData["Title"] = "Water & Rainfall Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Sheep">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Cows">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Camps">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Staff">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Tasks">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" asp-action="Water">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Assets">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Finance">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Water & Rainfall Management</h1>
                <div class="text-muted">
                    <small>% of rainfall can be calculated by evenly dividing 15 camps by 2300 hectare</small>
                </div>
            </div>

            <div class="row">
                <!-- Water Overview Grid -->
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-info text-white text-center">
                            <h5 class="mb-0"><i class="fas fa-tint me-2"></i>WATER</h5>
                        </div>
                        <div class="card-body">
                            <!-- 4x4 Grid of Camps -->
                            <div class="row">
                                @for (int i = 1; i <= 16; i++)
                                {
                                    <div class="col-3 mb-2">
                                        <button class="btn btn-outline-info w-100 camp-grid-btn" 
                                                data-camp="@i" 
                                                onclick="showCampDetails(@i)">
                                            @i
                                        </button>
                                    </div>
                                }
                            </div>
                            
                            <!-- Water Report Section -->
                            <div class="mt-4">
                                <h6 class="text-info">Water Report</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <tbody>
                                            <tr>
                                                <td>10/07/2025:</td>
                                                <td>Rain landed on camps 3, 5, 8 - 10ml per camp</td>
                                            </tr>
                                            <tr>
                                                <td>12/08/2025:</td>
                                                <td>Rain landed on camps 1 and 2 - 5ml per camp</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Camp Details Section -->
                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-info text-white text-center">
                            <h5 class="mb-0" id="campHeader">Camp Details</h5>
                        </div>
                        <div class="card-body">
                            <div id="campDetails">
                                <p class="text-muted text-center">Select a camp from the grid to view details</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Rainfall History -->
            <div class="card shadow mt-4">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="fas fa-history me-2"></i>Rainfall History</h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Camp</th>
                                        <th>Date</th>
                                        <th>Amount (ml)</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.OrderByDescending(r => r.RainfallDate))
                                    {
                                        <tr>
                                            <td>Camp @record.Camp.CampNumber</td>
                                            <td>@record.RainfallDate.ToString("MM/dd/yyyy")</td>
                                            <td>@record.AmountMl ml</td>
                                            <td>@(record.Notes ?? "-")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No rainfall records found.</p>
                    }
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Add Rainfall Modal -->
<div class="modal fade" id="addRainfallModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Add Rainfall for Camp <span id="modalCampNumber"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="rainfallForm">
                    <div class="mb-3">
                        <label class="form-label">Rainfall Amount:</label>
                        <div class="input-group">
                            <input type="number" class="form-control" name="amountMl" min="0" step="0.1" required />
                            <span class="input-group-text">ml</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date:</label>
                        <input type="date" class="form-control" name="rainfallDate" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes (optional):</label>
                        <textarea class="form-control" name="notes" rows="2"></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-info">Add Rain</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        showCampDetails(1);
    });
</script>

<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        margin: 0.125rem 0.5rem;
        transition: all 0.3s ease;
    }
    
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--orange-yellow) !important;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .camp-grid-btn {
        height: 60px;
        font-size: 1.2rem;
        font-weight: bold;
        transition: all 0.3s ease;
    }
    
    .camp-grid-btn:hover {
        transform: scale(1.05);
    }
    
    .btn {
        border-radius: 10px;
        font-weight: 600;
    }
    
    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: border-color 0.3s ease;
    }
    
    .form-control:focus {
        border-color: var(--medium-green);
        box-shadow: 0 0 0 0.2rem rgba(78, 113, 69, 0.25);
    }
</style>