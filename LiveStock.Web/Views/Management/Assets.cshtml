@model IEnumerable<LiveStock.Core.Models.Asset>

@{
    ViewData["Title"] = "Assets Management";
    Layout = "_Layout";
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark-green sidebar collapse">
            <div class="position-sticky pt-3 management-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Dashboard" ? "active" : "")" asp-action="Dashboard" aria-current="@(currentAction == "Dashboard" ? "page" : null)">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Sheep" ? "active" : "")" asp-action="Sheep" aria-current="@(currentAction == "Sheep" ? "page" : null)">
                            <i class="fas fa-sheep me-2"></i>
                            Sheep Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Cows" ? "active" : "")" asp-action="Cows" aria-current="@(currentAction == "Cows" ? "page" : null)">
                            <i class="fas fa-cow me-2"></i>
                            Cow Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Camps" ? "active" : "")" asp-action="Camps" aria-current="@(currentAction == "Camps" ? "page" : null)">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Camps
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Staff" ? "active" : "")" asp-action="Staff" aria-current="@(currentAction == "Staff" ? "page" : null)">
                            <i class="fas fa-users me-2"></i>
                            Staff Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Tasks" ? "active" : "")" asp-action="Tasks" aria-current="@(currentAction == "Tasks" ? "page" : null)">
                            <i class="fas fa-tasks me-2"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Water" ? "active" : "")" asp-action="Water" aria-current="@(currentAction == "Water" ? "page" : null)">
                            <i class="fas fa-tint me-2"></i>
                            Water & Rainfall
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Assets" ? "active" : "")" asp-action="Assets" aria-current="@(currentAction == "Assets" ? "page" : null)">
                            <i class="fas fa-tools me-2"></i>
                            Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Finance" ? "active" : "")" asp-action="Finance" aria-current="@(currentAction == "Finance" ? "page" : null)">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Finance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentAction == "Notes" ? "active" : "")" asp-action="Notes" aria-current="@(currentAction == "Notes" ? "page" : null)">
                            <i class="fas fa-sticky-note me-2"></i>
                            Notes
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="module-hero" style="background-image: url('@Url.Content("~/Images/IMG-20251025-WA0032.jpg")'); background-size: cover; background-position: center; border-radius: 12px; position: relative; margin-bottom: 1rem;">
                <div class="module-overlay"></div>
                <div class="module-hero-content">
                    <h2 class="h3 mb-1">Assets Management</h2>
                    <p class="mb-0">Overview of equipment, vehicles, and supplies.</p>
                </div>
            </div>
            <style>
                .module-hero { position: relative; min-height: 220px; }
                .module-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.35); border-radius: 12px; }
                .module-hero-content { position: relative; z-index: 1; color: #fff; padding: 1.25rem 1.5rem; }
            </style>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Assets Management</h1>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addAssetModal">
                    <i class="fas fa-plus me-2"></i>Add New Asset
                </button>
            </div>

            <!-- Asset Categories -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-seedling fa-3x text-success mb-3"></i>
                            <h5>Feed</h5>
                            <h3 class="text-success">@Model.Count(a => a.Category == "Feed")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-tools fa-3x text-warning mb-3"></i>
                            <h5>Fencing</h5>
                            <h3 class="text-warning">@Model.Count(a => a.Category == "Fencing")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-truck fa-3x text-info mb-3"></i>
                            <h5>Vehicles</h5>
                            <h3 class="text-info">@Model.Count(a => a.Category == "Vehicles")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-paw fa-3x text-primary mb-3"></i>
                            <h5>Animal</h5>
                            <h3 class="text-primary">@Model.Count(a => a.Category == "Animal" || a.Category == "Cattle Lists")</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assets List -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="fas fa-list me-2"></i>All Assets</h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="d-flex flex-wrap align-items-center gap-2 mb-2">
                            <input id="assetSearch" class="form-control form-control-sm w-auto" placeholder="Search assets..." data-role="table-search" data-target="#assetsTable" />
                            <span class="ms-2 small text-muted">Status:</span>
                            @{ var assetStatuses = Model.Select(a => a.Status).Where(s => !string.IsNullOrWhiteSpace(s)).Distinct().ToList(); }
                            @foreach (var st in assetStatuses)
                            {
                                <button type="button" class="btn btn-sm btn-outline-secondary filter-chip" data-target="#assetsTable" data-filter="status" data-value="@st">@st</button>
                            }

                            @* Removed camp filter chips; Asset has no CampId *@
                            <button type="button" class="btn btn-sm btn-outline-primary density-toggle" data-target="#assetsTable">Compact density</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary clear-filters" data-target="#assetsTable">Clear filters</button>
                        </div>
                        <div class="table-responsive">
                            <table id="assetsTable" class="table table-striped table-hover table-sticky">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Type</th>
                                        <th>Purchase Price</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var asset in Model)
                                    {
                                        <tr data-status="@asset.Status">
                                            <td>@asset.Name</td>
                                            <td>@asset.Category</td>
                                            <td>@asset.Type</td>
                                            <td>
                                                <span class="text-success">$@((asset.PurchasePrice ?? 0).ToString("N2"))</span>
                                            </td>
                                            <td>
                                                @{ var s = string.IsNullOrWhiteSpace(asset.Status) ? "Unknown" : asset.Status; var cls = (s.IndexOf("active", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-success" : (s.IndexOf("maint", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-info" : (s.IndexOf("pending", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-warning" : (s.IndexOf("retired", System.StringComparison.OrdinalIgnoreCase) >= 0) ? "bg-danger" : "bg-secondary"; }
                                                <span class="badge @cls">@s</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="AssetDetails" asp-route-id="@asset.Id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="EditAsset" asp-route-id="@asset.Id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No assets available.</p>
                    }
                </div>
            </div>
        </main>
    </div>
</div>


<div class="modal fade" id="addAssetModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Add New Asset</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Management" asp-action="AddAsset" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Asset Name:</label>
                                <input type="text" class="form-control" name="Name" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Category:</label>
                                <select class="form-control" name="Category" required>
                                    <option value="">Select Category</option>
                                    <option value="Feed">Feed</option>
                                    <option value="Fencing">Fencing</option>
                                    <option value="Vehicles">Vehicles</option>
                                    <option value="Animal">Animal</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Type:</label>
                                <input type="text" class="form-control" name="Type" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Quantity:</label>
                                <input type="number" class="form-control" name="Quantity" min="0" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Unit:</label>
                                <input type="text" class="form-control" name="Unit" placeholder="kg, pieces, liters, etc." />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Purchase Price:</label>
                                <input type="number" class="form-control" name="PurchasePrice" step="0.01" min="0" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Purchase Date:</label>
                                <input type="date" class="form-control" name="PurchaseDate" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Location:</label>
                                <input type="text" class="form-control" name="Location" placeholder="Where is this asset stored?" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description:</label>
                        <textarea class="form-control" name="Description" rows="3"></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Asset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Client-side handlers removed; form posts to server actions.
</script>

