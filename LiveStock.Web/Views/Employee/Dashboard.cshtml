@model List<LiveStock.Core.Models.FarmTask>
@{
    ViewData["Title"] = "Employee Dashboard";
    Layout = "_Layout";
    var categories = new List<string> { "Sheep", "Cow", "Tasks", "Camps", "Finance", "Staff" }; // match admin Notes
}

<div class="container py-4">
<div class="module-hero" style="background-image: url('@Url.Content("~/Image/IMG-20251025-WA0031.jpg")'); background-size: cover; background-position: center; border-radius: 12px; position: relative; margin-bottom: 1rem;">
        <div class="module-overlay"></div>
        <div class="module-hero-content">
            <h2 class="h3 mb-1">Employee Dashboard</h2>
            <p class="mb-0">Your tasks, notes, and recent updates at a glance.</p>
        </div>
    </div>
    <style>
        .module-hero { position: relative; min-height: 220px; }
        .module-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.35); border-radius: 12px; }
        .module-hero-content { position: relative; z-index: 1; color: #fff; padding: 1.25rem 1.5rem; }
    </style>
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
        <h1 class="h3">Employee Dashboard</h1>
        <a class="btn btn-outline-warning" asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
        </a>
    </div>

    <div class="row">
        <!-- Tasks -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Current Tasks</h5>
                </div>
                <div class="card-body">
                    @{
                        var currentTasks = Model.Where(t => t.Status == "Pending").ToList();
                    }
                    @if (currentTasks.Any())
                    {
                        <div class="list-group">
                            @foreach (var t in currentTasks)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>@t.Description</strong>
                                        <small class="text-muted">Due: @(t.DueDate.ToString("MM/dd/yyyy HH:mm"))</small>
                                    </div>
                                    <div class="small text-muted">
                                        Assigned to: @(t.AssignedTo?.Name ?? ("#" + t.AssignedToId)) • Importance: @t.Importance • Status: @t.Status
                                    </div>
                                    @if (!string.IsNullOrEmpty(t.Notes))
                                    {
                                        <div class="small mt-1">@t.Notes</div>
                                    }
                                    <form asp-controller="Management" asp-action="CompleteTask" method="post" class="mt-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="taskId" value="@t.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-check me-1"></i>Mark Completed
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No current tasks.</p>
                    }
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Completed Tasks</h5>
                </div>
                <div class="card-body">
                    @{
                        var completedTasks = Model.Where(t => t.Status == "Completed").ToList();
                    }
                    @if (completedTasks.Any())
                    {
                        <div class="list-group">
                            @foreach (var t in completedTasks)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>@t.Description</strong>
                                        <small class="text-muted">Completed: @(t.CompletedAt?.ToString("MM/dd/yyyy HH:mm") ?? "-")</small>
                                    </div>
                                    <div class="small text-muted">
                                        Assigned to: @(t.AssignedTo?.Name ?? ("#" + t.AssignedToId)) • Importance: @t.Importance
                                    </div>
                                    @if (!string.IsNullOrEmpty(t.Notes))
                                    {
                                        <div class="small mt-1">@t.Notes</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No completed tasks yet.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Staff Communication & Notes -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Staff Communication</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Management" asp-action="SendMessage" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" name="content" rows="3" placeholder="Type your message" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Assign To (optional)</label>
                            <select class="form-control" name="recipientId">
                                <option value="">Broadcast to all staff</option>
                                @foreach (var staff in ViewBag.Staff as List<LiveStock.Core.Models.Staff>)
                                {
                                    <option value="@staff.Id">@staff.Name (@staff.EmployeeId)</option>
                                }
                            </select>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-info"><i class="fas fa-paper-plane me-2"></i>Send</button>
                        </div>
                    </form>

                    <hr />

                    <h6 class="mb-2">Recent Messages</h6>
                    @if ((ViewBag.Messages as List<LiveStock.Core.Models.Message>)?.Any() == true)
                    {
                        <div class="list-group">
                            @foreach (var m in ViewBag.Messages as List<LiveStock.Core.Models.Message>)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>@(m.Sender?.Name ?? "Unknown")</strong>
                                        <small class="text-muted">@m.SentAt.ToString("MM/dd/yyyy HH:mm")</small>
                                    </div>
                                    <div>@m.Content</div>
                                    @if (m.IsBroadcast)
                                    {
                                        <small class="text-muted">Broadcast</small>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No messages yet.</p>
                    }
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="fas fa-sticky-note me-2"></i>Notes</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Management" asp-action="CreateNote" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Title</label>
                                    <input type="text" class="form-control" name="Title" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Category</label>
                                    <select class="form-control" name="Category" required>
                                        @foreach (var cat in categories)
                                        {
                                            <option value="@cat">@cat</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Content</label>
                            <textarea class="form-control" name="Content" rows="3" required></textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning"><i class="fas fa-plus me-2"></i>Add Note</button>
                        </div>
                    </form>

                    <hr />

                    @if ((ViewBag.Notes as List<LiveStock.Core.Models.Note>)?.Any() == true)
                    {
                        <div class="list-group">
                            @foreach (var n in ViewBag.Notes as List<LiveStock.Core.Models.Note>)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>@n.Title</strong>
                                        <small class="text-muted">@n.CreatedAt.ToString("MM/dd/yyyy HH:mm")</small>
                                    </div>
                                    <div class="small text-muted">Category: @(n.Category ?? "-")</div>
                                    <div>@n.Content</div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No notes yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>